@model LostAndFoundMVC.Models.LostItems
@{
    ViewData["Title"] = "Report Lost Item";
}

<div class="container">


<h2>Report Lost Item</h2>

<form asp-action="ReportLostItem" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemType"></label>
        <input asp-for="ItemType" class="form-control" />
        <span asp-validation-for="ItemType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocationLost"></label>
        <input asp-for="LocationLost" class="form-control" />
        <span asp-validation-for="LocationLost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Choose File</label>
        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
